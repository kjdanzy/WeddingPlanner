@model LoginUser

<div class="">
    <div class="text-center">
        <h1>Login below</h1>
    </div>
    <br>
    <form asp-controller="Home" asp-action="CheckLogin" method="post">
        <div class="form-group">
            <label asp-for="LoginEmail">Login Email</label>
            <input asp-for="LoginEmail" class="form-control">
            <span class="alert-danger" asp-validation-for="LoginEmail"></span>
        </div>
        <div class="form-group">
            <label asp-for="LoginPassword">Login Password</label>
            <input asp-for="LoginPassword" class="form-control">
            <span class="alert-danger" asp-validation-for="LoginPassword"></span>
        </div>
        <input type="submit" class="btn btn-lg btn-success">
    </form>
</div>