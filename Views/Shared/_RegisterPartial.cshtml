@{
    ViewData["Title"] = "Home Page";
}

@model User

<div class="">
    <div class="text-center">
        <h1>Register</h1>
    </div>
    <br>
    <form asp-controller="Home" asp-action="Register" method="post">
        <div class="form-group">
            <label asp-for="FirstName">First Name</label>
            <input asp-for="FirstName" class="form-control">
            <span class="alert-danger" asp-validation-for="FirstName"></span>
        </div>
        <div class="form-group">
            <label asp-for="LastName">Last Name</label>
            <input asp-for="LastName" class="form-control">
            <span class="alert-danger" asp-validation-for="LastName"></span>
        </div>
        <div class="form-group">
            <label asp-for="SpiritAnimal">Spirit Animal</label>
            <input asp-for="SpiritAnimal" class="form-control">
            <span class="alert-danger" asp-validation-for="SpiritAnimal"></span>
        </div>
        <div class="form-group">
            <label asp-for="Email">Email</label>
            <input asp-for="Email" class="form-control">
            <span class="alert-danger" asp-validation-for="Email"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password">Password</label>
            <input asp-for="Password" class="form-control">
            <span class="alert-danger" asp-validation-for="Password"></span>
        </div>
        <div class="form-group">
            <label asp-for="Confirm">Confirm Password</label>
            <input asp-for="Confirm" class="form-control">
            <span class="alert-danger" asp-validation-for="Confirm"></span>
        </div>
        <input type="submit" class="btn btn-success btn-lg">
    </form>
</div>
