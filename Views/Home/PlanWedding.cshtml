@model Wedding

<div class="container ">
    <div>
        <h1>Plan Your Wedding</h1>
    </div>
    <div>
        <h2><a href="logout">Log Out</a></h2>
        
    </div>
</div>    
<br>
<div>
    <form asp-controller="Home" asp-action="CreateWedding" method="post">
        <div class="form-group">
            <label asp-for="WedderOne">Wedder One</label>
            <input asp-for="WedderOne" class="form-control">
            <span class="alert-danger" asp-validation-for="WedderOne"></span>
        </div>
        <div class="form-group">
            <label asp-for="WedderTwo">Wedder Two</label>
            <input asp-for="WedderTwo" class="form-control">
            <span class="alert-danger" asp-validation-for="WedderTwo"></span>
        </div>
        <div class="form-group">
            <label asp-for="WeddingDate">Wedding Date</label>
            <input asp-for="WeddingDate" class="form-control">
            <span class="alert-danger" asp-validation-for="WeddingDate"></span>
        </div>
        <div class="form-group">
            <label asp-for="WeddingAddress">Wedding Address</label>
            <input asp-for="WeddingAddress" class="form-control">
            <span class="alert-danger" asp-validation-for="WeddingAddress"></span>
        </div>
        <input type="submit" class="btn btn-success btn-lg">
    </form>
</div>